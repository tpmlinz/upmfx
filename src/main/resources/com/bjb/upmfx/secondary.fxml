<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bjb.upmfx.SecondaryController">
    <children>
        <Label text="Secondary View" />
        <Slider fx:id="pumpSpeedSlider" min="0" max="100" majorTickUnit="10" minorTickCount="9" showTickMarks="true" showTickLabels="true" blockIncrement="1.0" snapToTicks="true" onValueChange="#onPumpSpeedSliderChange"/>
        <Slider fx:id="celsiusSlider" min="0" max="100" majorTickUnit="10" minorTickCount="9" showTickMarks="true" showTickLabels="true" blockIncrement="1.0" snapToTicks="true" onValueChange="#onCelsiusSliderChange"/>
        <HBox spacing="20.0">
        	<children>
        		<Label text="Enabled"/><Label fx:id="enabledLabel" text="On"/>
       
        		<Label text="PWM"/><Label fx:id="pwmLabel" text="O"/>
        	</children>
        </HBox>
        <Button fx:id="secondaryButton" text="Switch to Primary View" onAction="#switchToPrimary" />
             
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
